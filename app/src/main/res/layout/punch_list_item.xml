<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sh_list_item"
                android:padding="5dp"
                android:layout_margin="10dp"
>

    <TextView
            android:id="@+id/punch_id_text_view"
            android:text="72"
            android:textSize="32sp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_margin="5dp"/>
    <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/punch_id_text_view"
            android:gravity="center"

    >
        <TextView
                android:id="@+id/punch_time_text_view"
                android:text="Время отметки"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
        />
        <TextView
                android:id="@+id/from_start_time_text_view"
                android:text="Время отметки"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
        />
    </LinearLayout>

</RelativeLayout>