<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
            android:id="@+id/event_id_text_view"
            android:text="Мероприятие"
            android:textSize="24sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:gravity="top|center_horizontal" android:layout_margin="5dp"/>
    <TextView
            android:id="@+id/event_start_time_text_view"
            android:text="Время начала"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/event_id_text_view"
            android:gravity="center_horizontal" android:layout_margin="5dp"/>
    <TextView
            android:id="@+id/event_end_time_text_view"
            android:text="Время окончания"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/event_start_time_text_view"
            android:gravity="center_horizontal" android:layout_margin="5dp"/>
</RelativeLayout>