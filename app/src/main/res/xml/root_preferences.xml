<androidx.preference.PreferenceScreen
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        >
    <EditTextPreference
            app:key="beacon_distance"
            app:title="Дистанция обнаружения(метры)"
            app:defaultValue="3"
            android:icon="@drawable/ic_baseline_speaker_phone_24px"
            app:useSimpleSummaryProvider="true"/>
    <EditTextPreference
            app:key="beacon_scan_period"
            app:title="Период сканирования(секунды)"
            app:defaultValue="1"
            android:icon="@drawable/ic_search_period"
            app:useSimpleSummaryProvider="true"/>
    <EditTextPreference
            app:key="beacon_between_scan_period"
            app:title="Промежуток сканирования(секунды)"
            app:defaultValue="0"
            android:icon="@drawable/ic_search_period"
            app:useSimpleSummaryProvider="true"/>
    <EditTextPreference
            app:key="beacon_update_interval"
            app:title="Обновить время КП после(секунды)"
            app:defaultValue="300"
            android:icon="@drawable/ic_search_period"
            app:useSimpleSummaryProvider="true"/>
    <ListPreference
            android:key="update_punch_params"
            android:icon="@drawable/ic_baseline_find_replace_24px"
            android:title="Параметры обновления метки"
            android:entries="@array/update_parameters_titles"
            android:defaultValue="0"
            android:entryValues="@array/update_parameters_values"/>
</androidx.preference.PreferenceScreen>
