<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ru.hunkel.mgrouptracker">

    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@drawable/ic_main_icon"
            android:label="@string/app_name"
            android:roundIcon="@drawable/ic_main_icon"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <activity
                android:name=".activities.HostActivity"
                android:label="@string/title_activity_host"
                android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".fragments.SettingsActivity"/>

        <service
                android:name=".services.TrackingService"
                android:enabled="true"
                android:exported="true">
        </service>
    </application>

</manifest>